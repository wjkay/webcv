

html, body
  width 100%;
  height 100%;
  font 1em  'Cutive Mono', Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  text-align center
  overflow hidden

body
  background-image url(/images/fern1080p.jpg)
  background-size cover

#splash 
  display inline-block
  text-align center
  border-radius 9px
  box-shadow 6px 6px 16px black
  background-color white
  max-height 85%
  max-width 90% 
  margin-left 1em
  margin-right 1em

#title
  font-size 1em 
  margin-top -1em
  margin-bottom -1.5em
  color black

button
  font 1em  'Cutive Mono', Arial, "Lucida Grande", "Lucida Sans", Tahoma, Verdana, sans-serif
  border none

#navmenu button
  background-color white
  color #B5B5B5

#navmenu button:hover
  color black
  cursor pointer

.cvmenu
  font-size 1em
  background-color white
  color black

.cvmenu:hover
  font-weight bold
  cursor pointer

.active
  font-weight bold

#primarywrapper
  border-radius 9px
  box-shadow 6px 6px 16px black
  background-color white
  max-height 85%
  max-width 90% 
  margin-left auto
  margin-right auto
  margin-top 1em  
  overflow auto

#primarywrapper p
  font-family Arial
  font-size .85em

.maindiv
  max-height 100%
  margin-left 1em
  margin-right 1em
  margin-bottom 1em

.maindiv a
  color black

.maindiv a:hover
  color #B5B5B5

h2
  margin-bottom -.2em

h3
  margin-top .2em
  margin-bottom -.1em

#cv h4
  margin-bottom -1em

#work img
  width 100%

#work td
  width 50%

  


